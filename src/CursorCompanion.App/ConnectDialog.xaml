<Window x:Class="CursorCompanion.App.ConnectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect to Host"
        Width="320" Height="140"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Enter host IP address:" Margin="0,0,0,4"/>
            <TextBox x:Name="IpTextBox" Text="127.0.0.1"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Connect" Width="80" Margin="0,0,8,0" Click="OnConnect" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Click="OnCancel" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
